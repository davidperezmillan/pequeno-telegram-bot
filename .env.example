# ===== CONFIGURACIÓN OBLIGATORIA =====
# Estas variables son requeridas para que el bot funcione

# Credenciales de Telegram API (obtener en https://my.telegram.org/auth)
API_ID=tu_api_id_aqui
API_HASH=tu_api_hash_aqui

# Token del bot (obtener de @BotFather)
BOT_TOKEN=tu_bot_token_aqui


# ===== CONFIGURACIÓN DE GRUPO OBJETIVO =====
# Si quieres que el bot solo funcione en un grupo específico

# ID del grupo objetivo (opcional)
# TARGET_GROUP_ID=-1001234567890

# Username del grupo objetivo (opcional, sin @)
# TARGET_GROUP_USERNAME=mi_grupo


# ===== CONFIGURACIÓN DE BASE DE DATOS =====
# URL de la base de datos (por defecto SQLite)
DATABASE_URL=sqlite:///data/bot_data.db

# Para PostgreSQL:
# DATABASE_URL=postgresql://usuario:contraseña@localhost:5432/nombre_bd


# ===== CONFIGURACIÓN DE LOGGING =====
# Nivel de logging (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Archivo de log
LOG_FILE=logs/bot.log


# ===== CONFIGURACIÓN DE DIRECTORIOS =====
# Directorio para descargas
DOWNLOADS_DIR=downloads

# Directorio temporal
TEMP_DIR=temp

# Directorio de datos
DATA_DIR=data

# Directorio de logs
LOGS_DIR=logs


# ===== CONFIGURACIÓN DE PROCESAMIENTO =====
# Tamaño máximo de archivo en MB
MAX_FILE_SIZE_MB=50

# Calidad de video (low, medium, high)
VIDEO_QUALITY=medium

# Calidad de imagen (0-100)
IMAGE_QUALITY=85


# ===== CONFIGURACIÓN DE NOTIFICACIONES =====
# Habilitar notificaciones
ENABLE_NOTIFICATIONS=true

# Chat ID para notificaciones (opcional)
# NOTIFICATION_CHAT_ID=123456789


# ===== CONFIGURACIÓN DE RATE LIMITING =====
# Número máximo de mensajes por ventana de tiempo
RATE_LIMIT_MESSAGES=10

# Ventana de tiempo en segundos
RATE_LIMIT_WINDOW=60


# ===== CONFIGURACIÓN DE DESARROLLO =====
# Modo debug (muestra más información)
DEBUG_MODE=false

# Modo desarrollo
DEV_MODE=false