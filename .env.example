# ===== CONFIGURACIÓN OBLIGATORIA =====
# Estas variables son requeridas para que el bot funcione

# Credenciales de Telegram API (obtener en https://my.telegram.org/auth)
API_ID=tu_api_id_aqui
API_HASH=tu_api_hash_aqui

# Token del bot (obtener de @BotFather)
BOT_TOKEN=tu_bot_token_aqui


# ===== CONFIGURACIÓN DE CHATS ESPECÍFICOS =====
# Chat personal del bot contigo (para notificaciones y control)
CHAT_ME=tu_chat_id_personal

# Chat objetivo donde el bot enviará contenido
CHAT_TARGET=tu_chat_objetivo


# ===== CONFIGURACIÓN DE BASE DE DATOS =====
# URL de la base de datos (por defecto SQLite)
DATABASE_URL=sqlite:///data/bot_data.db


# ===== CONFIGURACIÓN DE DIRECTORIOS =====
# Directorio de datos
DATA_DIR=data

# Directorio de logs
LOGS_DIR=logs

# Directorio para descargas
DOWNLOADS_DIR=downloads


# ===== CONFIGURACIÓN DE LOGGING =====
# Nivel de logging (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Archivo de log
LOG_FILE=logs/bot.log


# ===== CONFIGURACIÓN DE PROCESAMIENTO =====
# Tamaño máximo de archivo en MB
MAX_FILE_SIZE_MB=20